{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "plugin:react/recommended",
      "airbnb/base"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "react"
  ],
  "rules": {
      "react/prop-types": 0,
      "no-plusplus": "off",
      "quotes": "off",
      "arrow-body-style": ["off"],
      "object-curly-newline": "off",
      "class-methods-use-this": "off"
  },
  "settings": {
      "import/resolver": {
          "node": {
              "extensions": [".js", ".jsx"],
              "moduleDirectory": ["node_modules", "src/"]
          }
      }
  }
}